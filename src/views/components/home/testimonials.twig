<salla-slider id="testimonials-slider" show-controls="true" type="carousel">
	<div slot="items">
		{% for item in items %}
			<div class="testimonial-item">
				<img src="{{ item.avatar }}" alt="{{ item.name }}"/>
				<p>{{ item.text }}</p>
				<div>
					<h4>{{ item.name }}</h4>
				</div>
				<div>
					{% for i in range(0, item.stars) %}
						<i class="star">*</i>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
</salla-slider>
