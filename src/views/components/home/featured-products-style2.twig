{% set component_id='featured-products-style2-' ~ position %}
{% set is_vertical = theme.settings.get('vertical_fixed_products', true) %}
<section class="py-8 sm:py-16 nickless-background" id="{{ component_id }}">
	<div class="container mx-auto">
		<div class="tabs hide-scroll mb-8">
			{% for section in items %}
				<h1 class="text-right text-5xl font-light mr-5">{{ section.title }}</h1>
			{% endfor %}
		</div>

		<div class="px-5">
			{% for section in items %}
				<div id="{{ component_id }}-{{ section.id }}" class="{{ loop.first ? 'block' : 'hidden' }} my-4">
					<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
						{% set products = section.products | slice(0, 4) %}
						{% for product in products %}
							<custom-product-card
								product="{{ product|json_encode }}" class="flex flex-col bg-white shadow-md overflow-hidden h-[500px]">
								<!-- التعديل في ارتفاع الصورة داخل العنصر -->
								<div class="custom-product-card-image flex-shrink-0 h-[300px] overflow-hidden">
									<img src="{{ product.image.url }}" alt="{{ product.image.alt }}" class="w-full h-full object-cover">
								</div>
								<div class="flex flex-col flex-grow">
									<h3 class="text-xl font-semibold mb-2">{{ product.name }}</h3>
									<p class="text-gray-700 mb-4">{{ product.description }}</p>
									<span class="text-lg font-bold">{{ product.price }}
										ر.س</span>
								</div>
							</custom-product-card>
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
