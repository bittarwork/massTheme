{% extends "layouts.master" %}

{% block content %}
	<div
		class="container">

		{# Add breadcrumb container to create space for breadcrumbs if breadcrumbs are off #}
		<nav class="breadcrumbs w-full py-5">
			<salla-breadcrumb></salla-breadcrumb>
		</nav>

		{# Main content area for the page #}
		<div class="flex justify-center">
			<div
				class="w-full lg:w-10/12 bg-white rounded p-6 lg:p-8 mt-4 lg:mt-12 shadow-md">

				{# Header Section with Page Title and Sorting Dropdown #}
				<div class="mb-4 sm:mb-6 flex justify-between items-center">
					<h1 class="font-bold text-2xl text-gray-900">{{ page.title }}</h1>

					{# Sorting Filter #}
					<div class="flex items-center">
						<label for="testimonials-filter" class="hidden sm:block rtl:ml-3 ltr:mr-3 whitespace-nowrap">{{ trans('pages.categories.sorting') }}</label>
						<select id="testimonials-filter" class="form-input pt-0 pb-1 rtl:pl-10 ltr:pr-10 rounded-md shadow-sm border-gray-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
							<option value="latest">{{ trans('pages.testimonials.sort_by_date_desc') }}</option>
							<option value="oldest">{{ trans('pages.testimonials.sort_by_date_asc') }}</option>
							<option value="top_rating">{{ trans('pages.testimonials.sort_by_rating_desc') }}</option>
							<option value="bottom_rating">{{ trans('pages.testimonials.sort_by_rating_asc') }}</option>
						</select>
					</div>
				</div>

				{# Testimonials Section #}
				<section class="mt-6">
					<salla-comments testimonials></salla-comments>
				</section>

			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	 <script defer src="{{ 'testimonials.js' | asset }}"></script>
{% endblock %}


