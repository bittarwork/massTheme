{#
| Variable     | Type                  | Description |
|--------------|-----------------------|-------------|
| page         | Page                  |             |
| page.title   | string                |             |
| page.content | string                |             |
| page.url     | string                |             |
| page.slug    | string                |             |
#}
{% extends "layouts.master" %}

{% block content %}
	<div
		class="container">

		{# Add breadcrumb container to create space for breadcrumbs if they are off #}
		<nav class="breadcrumbs w-full py-5">
			<salla-breadcrumb></salla-breadcrumb>
		</nav>

		{# Main content area for the single page #}
		<div class="flex justify-center">
			<article class="content content--single-page w-full lg:w-10/12 bg-white rounded p-6 lg:p-8 mt-4 lg:mt-12 shadow-md">
				<header>
					<h1 class="font-bold text-2xl mb-6 text-gray-900">{{ page.title }}</h1>
				</header>

				<section class="content-entry prose max-w-none">
					{{ page.content|raw }}
				</section>

				<footer class="mt-8">
					<salla-comments item-id="{{ page.id }}" type="page"></salla-comments>
				</footer>
			</article>
		</div>
	</div>
{% endblock %}
